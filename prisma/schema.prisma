// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AppConfig {
  id           String   @id
  systemPrompt String
  model        String
  enabledTools Json?
  voiceSettings Json?
  /// Encrypted Groq API key (AES-256-GCM). Never return plaintext to the client.
  groqApiKeyEncrypted String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
